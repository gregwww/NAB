<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,0.5">
        <Grid.RowDefinitions>
            <RowDefinition Height="199*"/>
            <RowDefinition Height="223*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="actionComboBox" HorizontalAlignment="Left" Margin="62,35,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" RenderTransformOrigin="-0.658,0.443" Height="22"/>
        <Label x:Name="totalLabel" Content="Total Maturity Amounts:" HorizontalAlignment="Left" Margin="218,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.127,0.61" Width="149" Height="26"/>
        <Label x:Name="actionLabel" Content="Action:" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Height="26" Width="47"/>
        <Label x:Name="totalMaturity" Content="0" HorizontalAlignment="Left" Margin="367,31,0,0" VerticalAlignment="Top" Width="104" Height="26"/>
        <DataGrid x:Name="depositsGrid" Margin="10,84,10,10" Grid.RowSpan="2" RenderTransformOrigin="0.497,0.446"/> 
    </Grid>
</Window>
